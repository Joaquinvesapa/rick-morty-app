---

<ul>
  {
    characters.map(character => (
    <div class="flex flex-col items-center bg-white border rounded-lg shadow-md md:flex-row md:max-w-xl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
      <img class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-l-lg"src={character.image}/>
      <div class="flex flex-col justify-between p-4 leading-normal">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{character.name}</h5>
        <div class="flex flex-row ">
          <p class="mb-3 font-bold text-gray-700 dark:text-gray-400">Estado:</p>
          <p class="mb-3 ml-2 font-normal text-gray-700 dark:text-gray-400">{character.status}</p>
        </div>
        <div class="flex flex-row ">
          <p class="mb-3 font-bold text-gray-700 dark:text-gray-400">Especie:</p>
          <p class="mb-3 ml-2 font-normal text-gray-700 dark:text-gray-400">{character.species}</p>
        </div>
        <div class="flex flex-row ">
          <p class="mb-3 font-bold text-gray-700 dark:text-gray-400">Genero:</p>
          <p class="mb-3 ml-2 font-normal text-gray-700 dark:text-gray-400">{character.gender}</p>
        </div>
      </div>
    </div>  
    ))

  }

</ul>