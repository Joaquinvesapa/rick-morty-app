---
import Card from "../components/Card.astro";
//MainLayout
import Footer from "../components/Footer.astro";
import SearchComponent from "../components/SearchComponent.astro";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <div class="bg-dk-violet w-full h-screen flex justify-center">
    <div class="absolute w-96 h-96 rounded-full bg-pink filter blur-3xl opacity-40 left-0 top-32"></div>
    <div class="absolute w-96 h-96 rounded-full bg-lt-green filter blur-3xl opacity-40 right-0"></div>
    <div class="relative w-full max-w-6xl flex justify-center">
      <div class="relative min-w-72 w-10/12 h-screen main-content flex flex-col">
        <div class="h-64 w-full tittle flex justify-center items-center">
          <img class="md:h-40 md:w-auto drop-shadow-[0_8px_1px_rgba(0,0,0,0.5)] relative w-auto h-auto" src="/Rick_and_Morty.png"alt="Imagen de Rick And Morty">
        </div>
        <SearchComponent></SearchComponent>
      </div>
    </div>
  </div>
</body>
</html>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Catamaran:wght@500&display=swap');
